<%= render 'layouts/notice' %>
<div class="panel panel-primary">
  <div class="panel-heading ">Account Information</div>
  <table class="table">
    <tbody>
      <tr class="row"> 
        <td class="col-xs-5"> Username </td> 
        <td class="col-xs-7"> <%= @applicant.username %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Real Name </td> 
        <td class="col-xs-7"> <%= @applicant.name %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Email </td> 
        <td class="col-xs-7"> <%= @applicant.email %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> phone </td> 
        <td class="col-xs-7"> <%= @applicant.phone %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Student ID</td> 
        <td class="col-xs-7"> <%= @applicant.studentid %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Department </td> 
        <td class="col-xs-7"> <%= @applicant.department %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Account bonus </td> 
        <td class="col-xs-7"> <%= 100 - @applicant.cancel_num * 25 %></td>
      </tr>

    </tbody>
  </table>
</div>
<%=form_for @applicant, url: {action: "uploadimage"},:html => {class:'form-horizontal col-lg-12'} do |f|%>
  <%=f.file_field :image%>
<br/>
<br/>
  <%=f.submit "uploadimage"%>
<%end%>

<form action=<%="/applicants/"+@applicant.id.to_s+'/reset/'%> method='post'
	role="form" data-toggle="validator">
	 <div class="form-group">
    <label for="oldpassword" class="control-label col-xs-2">Old password:</label>
    <div class="col-xs-10">
        <input type="password" class="form-control" id="password" name="oldpassword" placeholder="Password" pattern="^\w{6,}" data-error="Minimum of 6 characters"  required>
  	</div>
  	<label for="newpassword" class="control-label col-xs-2">new password:</label>
    <div class="col-xs-10">
        <input type="password" class="form-control" id="password" name="newpassword" placeholder="Password" pattern="^\w{6,}" data-error="Minimum of 6 characters"  required>
  	</div>
    <span class="help-block with-errors"></span>
 	 </div>
 	<div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button type="submit"  class="btn btn-primary">Modify</button>
        </div>
 	 </div>
</form>
